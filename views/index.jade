extends layout

block content
  h1=title

  // Wrapper
  #wrapper

    // USER LIST
    h3 User List
    #userList
      table
        thead
          th UserName
          th Email
          th Delete?
        tbody
    // /USER LIST

    // ADD USER
    h2 Add User
    #addUser
      fieldset
        input#inputUserName(type='text', placeholder='Username')
        input#inputUserEmail(type='text', placeholder='Email')
        br
        button#btnAddUser(onclick='addUser()') Add User
    // /ADD USER

  // /WRAPPER